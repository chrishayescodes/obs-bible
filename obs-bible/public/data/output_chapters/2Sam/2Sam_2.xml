<ns1:verse osisID="2Sam.2.11" sID="2Sam.2.11" /><ns1:w lemma="strong:H03117 strong:H04557">And the time</ns1:w> <ns1:w lemma="strong:H01732">that David</ns1:w> <ns1:w lemma="strong:H04428">was king</ns1:w> <ns1:w lemma="strong:H02275">in Hebron</ns1:w> <ns1:w lemma="strong:H01004">over the house</ns1:w> <ns1:w lemma="strong:H03063">of Judah</ns1:w> <ns1:w lemma="strong:H07651">was seven</ns1:w> <ns1:w lemma="strong:H08141">years</ns1:w> <ns1:w lemma="strong:H08337">and six</ns1:w> <ns1:w lemma="strong:H02320">months</ns1:w>.<ns1:note type="study">time: Heb. number of days</ns1:note><ns1:verse eID="2Sam.2.11" />
<ns1:verse osisID="2Sam.2.12" sID="2Sam.2.12" /><ns1:milestone type="x-p" subType="x-added" marker="¶" /><ns1:w lemma="strong:H074">And Abner</ns1:w> <ns1:w lemma="strong:H01121">the son</ns1:w> <ns1:w lemma="strong:H05369">of Ner</ns1:w>, <ns1:w lemma="strong:H05650">and the servants</ns1:w> <ns1:w lemma="strong:H0378">of Ish–bosheth</ns1:w> <ns1:w lemma="strong:H01121">the son</ns1:w> <ns1:w lemma="strong:H07586">of Saul</ns1:w>, <ns1:w morph="strongMorph:TH8799" lemma="strong:H03318">went out</ns1:w> <ns1:w lemma="strong:H04266">from Mahanaim</ns1:w> <ns1:w lemma="strong:H01391">to Gibeon</ns1:w>.<ns1:verse eID="2Sam.2.12" />
