<ns1:verse osisID="2Chr.18.8" sID="2Chr.18.8" /><ns1:w lemma="strong:H04428">And the king</ns1:w> <ns1:w lemma="strong:H03478">of Israel</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H07121">called</ns1:w> <ns1:w lemma="strong:H0259">for one</ns1:w> <ns1:transChange type="added">of his</ns1:transChange> <ns1:w lemma="strong:H05631">officers</ns1:w>, <ns1:w morph="strongMorph:TH8799" lemma="strong:H0559">and said</ns1:w>, <ns1:w morph="strongMorph:TH8761" lemma="strong:H04116">Fetch quickly</ns1:w> <ns1:w lemma="strong:H04319">Micaiah</ns1:w> <ns1:w lemma="strong:H01121">the son</ns1:w> <ns1:w lemma="strong:H03229">of Imla</ns1:w>.<ns1:note type="study">officers: or, eunuchs</ns1:note><ns1:note type="study">Fetch…: Heb. Hasten</ns1:note><ns1:verse eID="2Chr.18.8" />
