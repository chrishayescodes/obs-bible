<ns1:verse osisID="1Kgs.12.1" sID="1Kgs.12.1" /><ns1:w lemma="strong:H07346">And Rehoboam</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H03212">went</ns1:w> <ns1:w lemma="strong:H07927">to Shechem</ns1:w>: <ns1:w lemma="strong:H03478">for all Israel</ns1:w> <ns1:w morph="strongMorph:TH8804" lemma="strong:H0935">were come</ns1:w> <ns1:w lemma="strong:H07927">to Shechem</ns1:w> <ns1:w morph="strongMorph:TH8687" lemma="strong:H04427">to make him king</ns1:w>.<ns1:verse eID="1Kgs.12.1" />
<ns1:verse osisID="1Kgs.12.2" sID="1Kgs.12.2" /><ns1:w lemma="strong:H03379">And it came to pass, when Jeroboam</ns1:w> <ns1:w lemma="strong:H01121">the son</ns1:w> <ns1:w lemma="strong:H05028">of Nebat</ns1:w>, <ns1:w lemma="strong:H04714">who was yet in Egypt</ns1:w>, <ns1:w morph="strongMorph:TH8800" lemma="strong:H08085">heard</ns1:w> <ns1:transChange type="added">of it</ns1:transChange>, (<ns1:w morph="strongMorph:TH8804" lemma="strong:H01272">for he was fled</ns1:w> <ns1:w lemma="strong:H06440">from the presence</ns1:w> <ns1:w lemma="strong:H04428">of king</ns1:w> <ns1:w lemma="strong:H08010">Solomon</ns1:w>, <ns1:w lemma="strong:H03379">and Jeroboam</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H03427">dwelt</ns1:w> <ns1:w lemma="strong:H04714">in Egypt</ns1:w>;)<ns1:verse eID="1Kgs.12.2" />
<ns1:verse osisID="1Kgs.12.3" sID="1Kgs.12.3" /><ns1:w morph="strongMorph:TH8799" lemma="strong:H07971">That they sent</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H07121">and called</ns1:w> <ns1:w lemma="strong:H03379">him. And Jeroboam</ns1:w> <ns1:w lemma="strong:H06951">and all the congregation</ns1:w> <ns1:w lemma="strong:H03478">of Israel</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H0935">came</ns1:w>, <ns1:w morph="strongMorph:TH8762" lemma="strong:H01696">and spake</ns1:w> <ns1:w lemma="strong:H07346">unto Rehoboam</ns1:w>, <ns1:w morph="strongMorph:TH8800" lemma="strong:H0559">saying</ns1:w>,<ns1:verse eID="1Kgs.12.3" />
<ns1:verse osisID="1Kgs.12.4" sID="1Kgs.12.4" /><ns1:w lemma="strong:H01">Thy father</ns1:w> <ns1:w lemma="strong:H07185">made</ns1:w> <ns1:w lemma="strong:H05923">our yoke</ns1:w> <ns1:w morph="strongMorph:TH8689" lemma="strong:H07185">grievous</ns1:w>: <ns1:w lemma="strong:H07186">now therefore make thou the grievous</ns1:w> <ns1:w lemma="strong:H05656">service</ns1:w> <ns1:w lemma="strong:H01">of thy father</ns1:w>, <ns1:w lemma="strong:H03515">and his heavy</ns1:w> <ns1:w lemma="strong:H05923">yoke</ns1:w> <ns1:w morph="strongMorph:TH8804" lemma="strong:H05414">which he put</ns1:w> <ns1:w morph="strongMorph:TH8685" lemma="strong:H07043">upon us, lighter</ns1:w>, <ns1:w morph="strongMorph:TH8799" lemma="strong:H05647">and we will serve</ns1:w> thee.<ns1:verse eID="1Kgs.12.4" />
