<ns1:verse osisID="1Kgs.12.6" sID="1Kgs.12.6" /><ns1:milestone type="x-p" subType="x-added" marker="Â¶" /><ns1:w lemma="strong:H04428">And king</ns1:w> <ns1:w lemma="strong:H07346">Rehoboam</ns1:w> <ns1:w morph="strongMorph:TH8735" lemma="strong:H03289">consulted</ns1:w> <ns1:w lemma="strong:H02205">with the old men</ns1:w>, <ns1:w morph="strongMorph:TH8802" lemma="strong:H05975">that stood</ns1:w> <ns1:w lemma="strong:H06440">before</ns1:w> <ns1:w lemma="strong:H08010">Solomon</ns1:w> <ns1:w lemma="strong:H01">his father</ns1:w> <ns1:w lemma="strong:H02416">while he yet lived</ns1:w>, <ns1:w morph="strongMorph:TH8800" lemma="strong:H0559">and said</ns1:w>, <ns1:w morph="strongMorph:TH8737" lemma="strong:H03289">How do ye advise</ns1:w> <ns1:w morph="strongMorph:TH8687" lemma="strong:H07725">that I may</ns1:w> <ns1:w lemma="strong:H01697">answer</ns1:w> <ns1:w lemma="strong:H05971">this people</ns1:w>?<ns1:verse eID="1Kgs.12.6" />
<ns1:verse osisID="1Kgs.12.7" sID="1Kgs.12.7" /><ns1:w morph="strongMorph:TH8762" lemma="strong:H01696">And they spake</ns1:w> <ns1:w morph="strongMorph:TH8800" lemma="strong:H0559">unto him, saying</ns1:w>, <ns1:w lemma="strong:H05650">If thou wilt be a servant</ns1:w> <ns1:w lemma="strong:H05971">unto this people</ns1:w> <ns1:w lemma="strong:H03117">this day</ns1:w>, <ns1:w morph="strongMorph:TH8804" lemma="strong:H05647">and wilt serve</ns1:w> <ns1:w morph="strongMorph:TH8804" lemma="strong:H06030">them, and answer</ns1:w> <ns1:w morph="strongMorph:TH8765" lemma="strong:H01696">them, and speak</ns1:w> <ns1:w lemma="strong:H02896">good</ns1:w> <ns1:w lemma="strong:H01697">words</ns1:w> <ns1:w lemma="strong:H05650">to them, then they will be thy servants</ns1:w> <ns1:w lemma="strong:H03117">for ever</ns1:w>.<ns1:verse eID="1Kgs.12.7" />
