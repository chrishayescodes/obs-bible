<ns1:verse osisID="Job.15.34" sID="Job.15.34" /><ns1:w lemma="strong:H05712">For the congregation</ns1:w> <ns1:w lemma="strong:H02611">of hypocrites</ns1:w> <ns1:transChange type="added">shall be</ns1:transChange> <ns1:w lemma="strong:H01565">desolate</ns1:w>, <ns1:w lemma="strong:H0784">and fire</ns1:w> <ns1:w morph="strongMorph:TH8804" lemma="strong:H0398">shall consume</ns1:w> <ns1:w lemma="strong:H0168">the tabernacles</ns1:w> <ns1:w lemma="strong:H07810">of bribery</ns1:w>.<ns1:verse eID="Job.15.34" />
