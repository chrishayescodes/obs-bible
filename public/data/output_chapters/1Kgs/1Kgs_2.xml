<ns1:verse osisID="1Kgs.2.1" sID="1Kgs.2.1" /><ns1:w lemma="strong:H03117">Now the days</ns1:w> <ns1:w lemma="strong:H01732">of David</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H07126">drew nigh</ns1:w> <ns1:w morph="strongMorph:TH8800" lemma="strong:H04191">that he should die</ns1:w>; <ns1:w morph="strongMorph:TH8762" lemma="strong:H06680">and he charged</ns1:w> <ns1:w lemma="strong:H08010">Solomon</ns1:w> <ns1:w lemma="strong:H01121">his son</ns1:w>, <ns1:w morph="strongMorph:TH8800" lemma="strong:H0559">saying</ns1:w>,<ns1:verse eID="1Kgs.2.1" />
