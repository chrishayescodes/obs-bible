<ns1:verse osisID="1Kgs.2.6" sID="1Kgs.2.6" /><ns1:w morph="strongMorph:TH8804" lemma="strong:H06213">Do</ns1:w> <ns1:w lemma="strong:H02451">therefore according to thy wisdom</ns1:w>, <ns1:w lemma="strong:H07872">and let not his hoar head</ns1:w> <ns1:w morph="strongMorph:TH8686" lemma="strong:H03381">go down</ns1:w> <ns1:w lemma="strong:H07585">to the grave</ns1:w> <ns1:w lemma="strong:H07965">in peace</ns1:w>.<ns1:verse eID="1Kgs.2.6" />
