<ns1:verse osisID="1Chr.21.1" sID="1Chr.21.1" /><ns1:w lemma="strong:H07854">And Satan</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H05975">stood up</ns1:w> <ns1:w lemma="strong:H03478">against Israel</ns1:w>, <ns1:w morph="strongMorph:TH8686" lemma="strong:H05496">and provoked</ns1:w> <ns1:w lemma="strong:H01732">David</ns1:w> <ns1:w morph="strongMorph:TH8800" lemma="strong:H04487">to number</ns1:w> <ns1:w lemma="strong:H03478">Israel</ns1:w>.<ns1:verse eID="1Chr.21.1" />
<ns1:verse osisID="1Chr.21.2" sID="1Chr.21.2" /><ns1:w lemma="strong:H01732">And David</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H0559">said</ns1:w> <ns1:w lemma="strong:H03097">to Joab</ns1:w> <ns1:w lemma="strong:H08269">and to the rulers</ns1:w> <ns1:w lemma="strong:H05971">of the people</ns1:w>, <ns1:w morph="strongMorph:TH8798" lemma="strong:H03212">Go</ns1:w>, <ns1:w morph="strongMorph:TH8798" lemma="strong:H05608">number</ns1:w> <ns1:w lemma="strong:H03478">Israel</ns1:w> <ns1:w lemma="strong:H0884">from Beer–sheba</ns1:w> <ns1:w lemma="strong:H01835">even to Dan</ns1:w>; <ns1:w morph="strongMorph:TH8685" lemma="strong:H0935">and bring</ns1:w> <ns1:w lemma="strong:H04557">the number</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H03045">of them to me, that I may know</ns1:w> <ns1:transChange type="added">it</ns1:transChange>.<ns1:verse eID="1Chr.21.2" />
