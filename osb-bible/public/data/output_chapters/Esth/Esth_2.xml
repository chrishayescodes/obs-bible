<ns1:verse osisID="Esth.2.22" sID="Esth.2.22" /><ns1:w lemma="strong:H01697">And the thing</ns1:w> <ns1:w morph="strongMorph:TH8735" lemma="strong:H03045">was known</ns1:w> <ns1:w lemma="strong:H04782">to Mordecai</ns1:w>, <ns1:w morph="strongMorph:TH8686" lemma="strong:H05046">who told</ns1:w> <ns1:transChange type="added">it</ns1:transChange> <ns1:w lemma="strong:H0635">unto Esther</ns1:w> <ns1:w lemma="strong:H04436">the queen</ns1:w>; <ns1:w lemma="strong:H0635">and Esther</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H0559">certified</ns1:w> <ns1:w lemma="strong:H04428">the king</ns1:w> <ns1:transChange type="added">thereof</ns1:transChange> <ns1:w lemma="strong:H04782">in Mordecai's</ns1:w> <ns1:w lemma="strong:H08034">name</ns1:w>.<ns1:verse eID="Esth.2.22" />
