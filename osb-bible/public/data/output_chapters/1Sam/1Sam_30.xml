<ns1:verse osisID="1Sam.30.20" sID="1Sam.30.20" /><ns1:w lemma="strong:H01732">And David</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H03947">took</ns1:w> <ns1:w lemma="strong:H06629">all the flocks</ns1:w> <ns1:w lemma="strong:H01241">and the herds</ns1:w>, <ns1:transChange type="added">which</ns1:transChange> <ns1:w morph="strongMorph:TH8804" lemma="strong:H05090">they drave</ns1:w> <ns1:w lemma="strong:H06440">before</ns1:w> <ns1:w lemma="strong:H01931">those</ns1:w> <ns1:transChange type="added">other</ns1:transChange> <ns1:w lemma="strong:H04735">cattle</ns1:w>, <ns1:w morph="strongMorph:TH8799" lemma="strong:H0559">and said</ns1:w>, This <ns1:transChange type="added">is</ns1:transChange> <ns1:w lemma="strong:H01732">David's</ns1:w> <ns1:w lemma="strong:H07998">spoil</ns1:w>.<ns1:verse eID="1Sam.30.20" />
