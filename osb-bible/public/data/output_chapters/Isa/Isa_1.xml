<ns1:verse osisID="Isa.1.22" sID="Isa.1.22" /><ns1:w lemma="strong:H03701">Thy silver</ns1:w> <ns1:w lemma="strong:H05509">is become dross</ns1:w>, <ns1:w lemma="strong:H05435">thy wine</ns1:w> <ns1:w morph="strongMorph:TH8803" lemma="strong:H04107">mixed</ns1:w> <ns1:w lemma="strong:H04325">with water</ns1:w>:<ns1:verse eID="Isa.1.22" />
