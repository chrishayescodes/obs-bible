<ns1:verse osisID="Jer.4.5" sID="Jer.4.5" /><ns1:milestone type="x-extra-p" /><ns1:w morph="strongMorph:TH8685" lemma="strong:H05046">Declare</ns1:w> <ns1:w lemma="strong:H03063">ye in Judah</ns1:w>, <ns1:w morph="strongMorph:TH8685" lemma="strong:H08085">and publish</ns1:w> <ns1:w lemma="strong:H03389">in Jerusalem</ns1:w>; <ns1:w morph="strongMorph:TH8798" lemma="strong:H0559">and say</ns1:w>, <ns1:w morph="strongMorph:TH8798" lemma="strong:H08628">Blow</ns1:w> <ns1:w lemma="strong:H07782">ye the trumpet</ns1:w> <ns1:w lemma="strong:H0776">in the land</ns1:w>: <ns1:w morph="strongMorph:TH8798" lemma="strong:H07121">cry</ns1:w>, <ns1:w morph="strongMorph:TH8761" lemma="strong:H04390">gather together</ns1:w>, <ns1:w morph="strongMorph:TH8798" lemma="strong:H0559">and say</ns1:w>, <ns1:w morph="strongMorph:TH8734" lemma="strong:H0622">Assemble</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H0935">yourselves, and let us go</ns1:w> <ns1:w lemma="strong:H04013">into the defenced</ns1:w> <ns1:w lemma="strong:H05892">cities</ns1:w>.<ns1:verse eID="Jer.4.5" />
