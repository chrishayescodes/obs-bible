<ns1:verse osisID="Jer.4.11" sID="Jer.4.11" /><ns1:w lemma="strong:H06256">At that time</ns1:w> <ns1:w morph="strongMorph:TH8735" lemma="strong:H0559">shall it be said</ns1:w> <ns1:w lemma="strong:H05971">to this people</ns1:w> <ns1:w lemma="strong:H03389">and to Jerusalem</ns1:w>, <ns1:w lemma="strong:H06703">A dry</ns1:w> <ns1:w lemma="strong:H07307">wind</ns1:w> <ns1:w lemma="strong:H08205">of the high places</ns1:w> <ns1:w lemma="strong:H04057">in the wilderness</ns1:w> <ns1:w lemma="strong:H01870">toward</ns1:w> <ns1:w lemma="strong:H01323">the daughter</ns1:w> <ns1:w lemma="strong:H05971">of my people</ns1:w>, <ns1:w morph="strongMorph:TH8800" lemma="strong:H02219">not to fan</ns1:w>, <ns1:w morph="strongMorph:TH8687" lemma="strong:H01305">nor to cleanse</ns1:w>,<ns1:verse eID="Jer.4.11" />
