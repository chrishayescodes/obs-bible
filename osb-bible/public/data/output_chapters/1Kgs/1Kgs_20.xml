<ns1:verse osisID="1Kgs.20.5" sID="1Kgs.20.5" /><ns1:w lemma="strong:H04397">And the messengers</ns1:w> <ns1:w morph="strongMorph:TH8799" lemma="strong:H07725">came again</ns1:w>, <ns1:w morph="strongMorph:TH8799" lemma="strong:H0559">and said</ns1:w>, <ns1:w morph="strongMorph:TH8804" lemma="strong:H0559">Thus speaketh</ns1:w> <ns1:w lemma="strong:H01130">Ben–hadad</ns1:w>, <ns1:w morph="strongMorph:TH8800" lemma="strong:H0559">saying</ns1:w>, <ns1:w morph="strongMorph:TH8804" lemma="strong:H07971">Although I have sent</ns1:w> <ns1:w morph="strongMorph:TH8800" lemma="strong:H0559">unto thee, saying</ns1:w>, <ns1:w morph="strongMorph:TH8799" lemma="strong:H05414">Thou shalt deliver</ns1:w> <ns1:w lemma="strong:H03701">me thy silver</ns1:w>, <ns1:w lemma="strong:H02091">and thy gold</ns1:w>, <ns1:w lemma="strong:H0802">and thy wives</ns1:w>, <ns1:w lemma="strong:H01121">and thy children</ns1:w>;<ns1:verse eID="1Kgs.20.5" />
