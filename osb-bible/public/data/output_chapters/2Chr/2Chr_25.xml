<ns1:verse osisID="2Chr.25.1" sID="2Chr.25.1" /><ns1:w lemma="strong:H0558">Amaziah</ns1:w> <ns1:transChange type="added">was</ns1:transChange> <ns1:w lemma="strong:H06242">twenty</ns1:w> <ns1:w lemma="strong:H02568">and five</ns1:w> <ns1:w lemma="strong:H08141">years</ns1:w> <ns1:w lemma="strong:H01121">old</ns1:w> <ns1:transChange type="added">when</ns1:transChange> <ns1:w morph="strongMorph:TH8804" lemma="strong:H04427">he began to reign</ns1:w>, <ns1:w morph="strongMorph:TH8804" lemma="strong:H04427">and he reigned</ns1:w> <ns1:w lemma="strong:H06242">twenty</ns1:w> <ns1:w lemma="strong:H08672">and nine</ns1:w> <ns1:w lemma="strong:H08141">years</ns1:w> <ns1:w lemma="strong:H03389">in Jerusalem</ns1:w>. <ns1:w lemma="strong:H0517">And his mother's</ns1:w> <ns1:w lemma="strong:H08034">name</ns1:w> <ns1:transChange type="added">was</ns1:transChange> <ns1:w lemma="strong:H03086">Jehoaddan</ns1:w> <ns1:w lemma="strong:H03389">of Jerusalem</ns1:w>.<ns1:verse eID="2Chr.25.1" />
