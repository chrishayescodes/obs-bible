<ns1:verse osisID="2Chr.25.6" sID="2Chr.25.6" /><ns1:w morph="strongMorph:TH8799" lemma="strong:H07936">He hired</ns1:w> <ns1:w lemma="strong:H03967">also an hundred</ns1:w> <ns1:w lemma="strong:H0505">thousand</ns1:w> <ns1:w lemma="strong:H01368">mighty</ns1:w> <ns1:w lemma="strong:H02428">men of valour</ns1:w> <ns1:w lemma="strong:H03478">out of Israel</ns1:w> <ns1:w lemma="strong:H03967">for an hundred</ns1:w> <ns1:w lemma="strong:H03603">talents</ns1:w> <ns1:w lemma="strong:H03701">of silver</ns1:w>.<ns1:verse eID="2Chr.25.6" />
